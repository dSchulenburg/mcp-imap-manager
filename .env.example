# IMAP MCP Server Configuration

# Server Settings
PORT=8001

# Authentication (choose one method)
# Single key (legacy):
MCP_API_KEY=your-secret-api-key

# Multi-key with user attribution (recommended):
# Format: key1:user1,key2:user2,key3:user3
# MCP_API_KEYS=abc123:admin,def456:colleague1,ghi789:colleague2

# Generate a secure key:
# openssl rand -base64 32 | tr '+/' '-_' | tr -d '='

# ============================================
# IMAP Account 1: one.com
# ============================================
IMAP_ONECOM_HOST=imap.one.com
IMAP_ONECOM_PORT=993
IMAP_ONECOM_USER=your-email@one.com
IMAP_ONECOM_PASSWORD=your-password
IMAP_ONECOM_TLS=true

# SMTP for one.com
SMTP_ONECOM_HOST=send.one.com
SMTP_ONECOM_PORT=465
SMTP_ONECOM_SECURE=true

# ============================================
# IMAP Account 2: GMX
# ============================================
IMAP_GMX_HOST=imap.gmx.net
IMAP_GMX_PORT=993
IMAP_GMX_USER=your-email@gmx.de
IMAP_GMX_PASSWORD=your-app-password
IMAP_GMX_TLS=true

# SMTP for GMX
SMTP_GMX_HOST=mail.gmx.net
SMTP_GMX_PORT=465
SMTP_GMX_SECURE=true

# ============================================
# IMAP Account 3: Gmail (optional)
# ============================================
IMAP_GMAIL_HOST=imap.gmail.com
IMAP_GMAIL_PORT=993
IMAP_GMAIL_USER=your-email@gmail.com
IMAP_GMAIL_PASSWORD=your-app-password
IMAP_GMAIL_TLS=true

# SMTP for Gmail
SMTP_GMAIL_HOST=smtp.gmail.com
SMTP_GMAIL_PORT=465
SMTP_GMAIL_SECURE=true
